{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
