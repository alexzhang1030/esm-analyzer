{
  "name": "esm-analyzer",
  "version": "0.2.6",
  "packageManager": "pnpm@8.6.10",
  "description": "The scanner and analyzer of ESM.",
  "author": "alexzhang1030",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/esm-analyzer.git"
  },
  "keywords": [
    "esm",
    "import",
    "export",
    "scanner",
    "analyzer"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "release": "vitest run && bumpp --commit \"chore: release v%s\" --push --tag && pnpm publish"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "estree-walker": "^2.0.2",
    "mitt": "^3.0.1",
    "p-limit": "^4.0.0",
    "to-path-tree": "^0.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.39.8",
    "@babel/types": "^7.22.5",
    "bumpp": "^9.1.1",
    "eslint": "^8.45.0",
    "lint-staged": "^13.2.3",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^7.1.0",
    "type-fest": "^4.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config-ts"
  }
}
